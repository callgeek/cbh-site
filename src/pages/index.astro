---

<Layout>
  <!-- Sticky Header -->
  <header id="top" class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-slate-200 shadow-sm">
    <nav class="mx-auto max-w-7xl px-6 lg:px-8" aria-label="Main navigation">
      <div class="flex h-20 items-center justify-between">
        <a href="#top" class="text-2xl font-bold text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900">
          {content.company.name}
        </a>
        <div class="hidden lg:flex lg:items-center lg:gap-x-8">
          {content.header.nav.map((item) => (
            <a
              href={item.href}
              class="text-sm font-medium text-slate-700 transition hover:text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900"
            >
              {item.text}
            </a>
          ))}
          <a
            href="#contact"
            class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900"
          >
            {content.header.cta}
          </a>
        </div>
        <div class="flex items-center gap-3 lg:hidden">
          <a
            href="#contact"
            class="rounded-lg bg-slate-900 px-3 py-2 text-xs font-semibold text-white transition hover:bg-slate-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900 sm:px-4 sm:text-sm"
          >
            {content.header.cta}
          </a>
          <button
            type="button"
            id="mobile-menu-button"
            class="inline-flex items-center justify-center rounded-lg p-2 text-slate-700 transition hover:bg-slate-100 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-900"
            aria-expanded="false"
            aria-controls="mobile-menu"
            aria-label="Toggle menu"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>
      </div>
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden border-t border-slate-200 lg:hidden">
        <div class="space-y-1 px-2 pb-3 pt-2">
          {content.header.nav.map((item) => (
            <a
              href={item.href}
              class="block rounded-lg px-3 py-2 text-base font-medium text-slate-700 transition hover:bg-slate-100 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-900"
            >
              {item.text}
            </a>
          ))}
        </div>
      </div>
    </nav>
  </header>

  <script>
    // Mobile menu toggle
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
        menuButton.setAttribute('aria-expanded', String(!isExpanded));
        mobileMenu.classList.toggle('hidden');
      });

      // Close menu when clicking on a link
      const menuLinks = mobileMenu.querySelectorAll('a');
      menuLinks.forEach(link => {
        link.addEventListener('click', () => {
          menuButton.setAttribute('aria-expanded', 'false');
          mobileMenu.classList.add('hidden');
        });
      });
    }
  </script>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-slate-50 via-white to-slate-50">
    <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl lg:text-6xl">
          {content.hero.headline}
        </h1>
        <p class="mt-6 text-lg leading-8 text-slate-600 sm:text-xl">
          {content.hero.subheadline}
        </p>
        <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a
            href="#contact"
            class="rounded-lg bg-slate-900 px-6 py-3 text-base font-semibold text-white shadow-lg transition hover:bg-slate-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900"
          >
            {content.hero.ctas.primary}
          </a>
          <a
            href="#services"
            class="rounded-lg border-2 border-slate-900 px-6 py-3 text-base font-semibold text-slate-900 transition hover:bg-slate-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900"
          >
            {content.hero.ctas.secondary}
          </a>
        </div>
        <div class="mt-12 flex flex-wrap items-center justify-center gap-8 text-sm text-slate-700">
          {content.hero.trustBullets.map((bullet) => (
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5 text-slate-900" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{bullet}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
          {content.services.title}
        </h2>
        <p class="mt-2 text-lg leading-8 text-slate-600">
          {content.services.subtitle}
        </p>
      </div>
      <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-2">
        {content.services.items.map((service) => (
          <div class="flex flex-col rounded-xl border border-slate-200 bg-white p-8 shadow-sm transition hover:shadow-md">
            <h3 class="text-xl font-semibold text-slate-900">{service.title}</h3>
            <ul class="mt-4 space-y-2">
              {service.bullets.map((bullet) => (
                <li class="flex items-start gap-3 text-slate-600">
                  <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-slate-900" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{bullet}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section id="process" class="bg-slate-50 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
          {content.process.title}
        </h2>
        <p class="mt-2 text-lg leading-8 text-slate-600">
          {content.process.subtitle}
        </p>
      </div>
      <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-4">
        {content.process.steps.map((step) => (
          <div class="flex flex-col">
            <div class="text-4xl font-bold text-slate-300">{step.number}</div>
            <h3 class="mt-4 text-xl font-semibold text-slate-900">{step.title}</h3>
            <p class="mt-2 text-slate-600">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
          {content.projects.title}
        </h2>
        <p class="mt-2 text-lg leading-8 text-slate-600">
          {content.projects.subtitle}
        </p>
      </div>
      <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-6 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {content.projects.items.map((project) => (
          <div class="group relative overflow-hidden rounded-xl">
            <div class="aspect-[4/3] bg-gradient-to-br from-slate-200 via-slate-100 to-slate-200 transition group-hover:from-slate-300 group-hover:via-slate-200 group-hover:to-slate-300"></div>
            <div class="absolute inset-0 flex items-end bg-gradient-to-t from-slate-900/80 to-transparent p-6">
              <p class="text-sm font-medium text-white">{project.caption}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="bg-slate-50 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
          {content.testimonials.title}
        </h2>
        <p class="mt-2 text-lg leading-8 text-slate-600">
          {content.testimonials.subtitle}
        </p>
      </div>
      <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {content.testimonials.items.map((testimonial) => (
          <div class="flex flex-col rounded-xl bg-white p-8 shadow-sm">
            <p class="text-slate-900">"{testimonial.quote}"</p>
            <div class="mt-6 border-t border-slate-200 pt-6">
              <p class="font-semibold text-slate-900">{testimonial.author}</p>
              <p class="text-sm text-slate-600">{testimonial.location}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section id="faq" class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-3xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
          {content.faq.title}
        </h2>
        <p class="mt-2 text-lg leading-8 text-slate-600">
          {content.faq.subtitle}
        </p>
      </div>
      <div class="mx-auto mt-16 space-y-4">
        {content.faq.items.map((item) => (
          <details class="group rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition hover:shadow-md">
            <summary class="flex cursor-pointer items-center justify-between text-lg font-semibold text-slate-900 list-none">
              <span>{item.question}</span>
              <svg class="h-5 w-5 flex-shrink-0 text-slate-500 transition group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
              </svg>
            </summary>
            <p class="mt-4 text-slate-600">{item.answer}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="bg-slate-50 py-24 sm:py-32">
    <div class="mx-auto max-w-3xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
          {content.contact.title}
        </h2>
        <p class="mt-2 text-lg leading-8 text-slate-600">
          {content.contact.subtitle}
        </p>
        <p class="mt-4 text-sm text-slate-500">
          {content.contact.note}
        </p>
      </div>
      <form class="mx-auto mt-16 space-y-6" action={content.contact.formEndpoint} method="POST">
        <div>
          <label for="name" class="block text-sm font-medium text-slate-900">
            {content.contact.form.name.label}
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            placeholder={content.contact.form.name.placeholder}
            class="mt-2 block w-full rounded-lg border border-slate-300 bg-white px-4 py-3 text-slate-900 shadow-sm placeholder:text-slate-400 focus:border-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-900"
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-slate-900">
            {content.contact.form.email.label}
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder={content.contact.form.email.placeholder}
            class="mt-2 block w-full rounded-lg border border-slate-300 bg-white px-4 py-3 text-slate-900 shadow-sm placeholder:text-slate-400 focus:border-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-900"
          />
        </div>
        <div>
          <label for="phone" class="block text-sm font-medium text-slate-900">
            {content.contact.form.phone.label}
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            required
            placeholder={content.contact.form.phone.placeholder}
            class="mt-2 block w-full rounded-lg border border-slate-300 bg-white px-4 py-3 text-slate-900 shadow-sm placeholder:text-slate-400 focus:border-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-900"
          />
        </div>
        <div>
          <label for="projectType" class="block text-sm font-medium text-slate-900">
            {content.contact.form.projectType.label}
          </label>
          <select
            id="projectType"
            name="projectType"
            required
            class="mt-2 block w-full rounded-lg border border-slate-300 bg-white px-4 py-3 text-slate-900 shadow-sm focus:border-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-900"
          >
            {content.contact.form.projectType.options.map((option) => (
              <option value={option === "Select a project type" ? "" : option}>
                {option}
              </option>
            ))}
          </select>
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-slate-900">
            {content.contact.form.message.label}
          </label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            placeholder={content.contact.form.message.placeholder}
            class="mt-2 block w-full rounded-lg border border-slate-300 bg-white px-4 py-3 text-slate-900 shadow-sm placeholder:text-slate-400 focus:border-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-900"
          ></textarea>
        </div>
        <div>
          <button
            type="submit"
            class="w-full rounded-lg bg-slate-900 px-6 py-3 text-base font-semibold text-white shadow-lg transition hover:bg-slate-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900"
          >
            {content.contact.form.submit}
          </button>
        </div>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <footer class="border-t border-slate-200 bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
        <div>
          <h3 class="text-lg font-bold text-slate-900">{content.company.name}</h3>
          <p class="mt-4 text-sm text-slate-600">
            {content.footer.serviceAreas}
          </p>
        </div>
        <div>
          <h3 class="text-sm font-semibold text-slate-900">Contact</h3>
          <ul class="mt-4 space-y-2 text-sm text-slate-600">
            <li>
              <a href={`tel:${content.company.phone}`} class="transition hover:text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900">
                {content.company.phone}
              </a>
            </li>
            <li>
              <a href={`mailto:${content.company.email}`} class="transition hover:text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900">
                {content.company.email}
              </a>
            </li>
          </ul>
        </div>
        <div>
          <h3 class="text-sm font-semibold text-slate-900">Quick Links</h3>
          <ul class="mt-4 space-y-2">
            {content.header.nav.map((item) => (
              <li>
                <a href={item.href} class="text-sm text-slate-600 transition hover:text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-900">
                  {item.text}
